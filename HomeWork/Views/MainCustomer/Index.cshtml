@model IEnumerable<HomeWork.Models.VW客戶關聯資料統計表>

@{
    ViewBag.Title = "客戶關聯資料表";
}

<h2>客戶關聯資料表</h2>
<div class="form-group">
    <div class="form-inline">
        <button id="customer" type="button" class="btn btn-info">客戶資料管理</button>
        <button id="contact" type="button" class="btn btn-info">客戶聯絡人管理</button>
        <button id="bank" type="button" class="btn btn-info">客戶銀行帳戶管理</button>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.聯絡人數量)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行帳戶數量)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.聯絡人數量)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行帳戶數量)
            </td>
        </tr>
    }
</table>

@section scripts{
    <script>
        $("#customer").click(function () {
            location.href = "@Url.Action("Index", "Customer")";
        })

        $("#contact").click(function () {
            location.href = "@Url.Action("Index", "CustomerContact")";
        })

        $("#bank").click(function () {
            location.href = "@Url.Action("Index", "CustomerBank")";
        })
    </script>
    }

